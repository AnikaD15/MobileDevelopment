<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.ait.bookexchange">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookExchange">
        <activity
            android:name=".UserBookListActivity"
            android:exported="true"
            android:label="@string/title_activity_user_book_list"
            android:theme="@style/Theme.BookExchange.NoActionBar" />
        <activity
            android:name=".UserBooksActivity"
            android:exported="true"
            android:label="@string/title_activity_user_books"
            android:theme="@style/Theme.BookExchange.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />
        <activity
            android:name=".BookListActivity"
            android:exported="true"
            android:label="@string/title_activity_book_list"
            android:theme="@style/Theme.BookExchange.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>